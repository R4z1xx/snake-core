#
#  Snake Base Configuration File
#


# Core settings

address: 127.0.0.1
port: 5000

cache_dir: '/var/cache/snake'
file_db: '/var/db/snake'
log_dir: '/var/log/snake'

mongodb: "mongodb://localhost:27017"


# Behaviour Settings

command_autoruns: True

strip_extensions: ['inactive', 'infected', 'safety']
zip_passwords: ['inactive', 'infected', 'password']


# Additional Settings:

snake_scale_dirs: []

http_proxy: null
https_proxy: null

# Celery Settings
backend: 'redis://localhost:6379'
broker: 'redis://localhost:6379/0'
